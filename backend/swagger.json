{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Sample API",
      "description": "A simple API to illustrate Swagger documentation"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "paths": {
      "/api/hello": {
        "get": {
          "summary": "Returns a greeting message",
          "responses": {
            "200": {
              "description": "Successful response",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }